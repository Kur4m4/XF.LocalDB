<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XF.LocalDB.View.Login.LoginView">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Fill" VerticalOptions="Center" Padding="50">
            <Entry Text="{Binding Usuario.Username}" Placeholder="Usuário" />
            <Entry Text="{Binding Usuario.Password}" Placeholder="Senha" IsPassword="True" />
            <Button Text="Entrar" Command="{Binding OnLoginCMD}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>